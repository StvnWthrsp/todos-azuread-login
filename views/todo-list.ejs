<script type="text/javascript" src="todo-list.js"></script>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
<% if (!user) { %>
	<h2>Login</h2>
	<a href="/login">Log In</a>
<% } else { %>
	<h2>Hello, <%= user.name %>.</h2>
	<h3>Here is your personal todo list.</h3>
	<ul>
		<% todos.forEach( (e, i) => { %>
			<li><input type="checkbox" class="todo-item"> <%= e.item %></li>
		<% }); %>
	</ul>
	<form action="/todos" method="post">
		<label for="item">New Todo Item</label>
		<input type="text" id="item" name="item"><br>
		<input type="submit" value="Submit">
	</form>
	<button type="button" onclick="removeTodos()">Remove Selected</button><br>
	<a href="/">Home</a><br>
	<a href="/logout">Log Out</a>
<% } %>
